<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/popup_action_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/action_bar_blue_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:text="@string/action_check_in"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <ProgressBar
            android:id="@+id/action_bar_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="4dp" />
    </FrameLayout>

    <ListView
        android:id="@+id/popup_content_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:layout_gravity="top|center_horizontal"
        android:background="@android:color/white"
        android:dividerHeight="1px"
        android:divider="@color/divider_grey" />

</FrameLayout>