<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/album_image_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/checkin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_image_view"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:textSize="16sp"
        android:textColor="@color/text_title" />

    <TextView
        android:id="@+id/checkin_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkin_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_content"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/checkin_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkin_info"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:textColor="@color/text_content" />

    <EditText
        android:id="@+id/shout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkin_history"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:textColor="@color/text_content" />

    <Button
        android:id="@+id/checkin_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shout_input"
        android:layout_marginTop="50dp"
        android:background="@drawable/check_in_button"
        android:gravity="center"
        android:text="@string/label_checkin"
        android:textColor="@android:color/white" />

</RelativeLayout>